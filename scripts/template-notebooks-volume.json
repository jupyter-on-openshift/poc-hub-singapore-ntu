{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "notebooks-volume"
    },
    "parameters": [
        {
            "name": "COURSE_NAME",
            "required": true,
            "value": ""
        },
        {
            "name": "APPLICATION_NAME",
            "required": true,
            "value": "jupyterhub"
        },
        {
            "name": "STORAGE_CAPACITY",
            "required": true,
            "value": "25Gi"
        },
        {
            "name": "NFS_SERVER_NAME",
            "required": true,
            "value": "sds.ntu.edu.sg"
        },
        {
            "name": "NFS_SERVER_SHARE",
            "required": true,
            "value": "/NTU/SPMS/openshift/jupyter"
        }
    ],
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "PersistentVolume",
            "metadata": {
                "name": "${COURSE_NAME}-notebooks-pv"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteMany"
                ],
                "capacity": {
                    "storage": "${STORAGE_CAPACITY}"
                },
                "nfs": {
                    "server": "${NFS_SERVER_NAME}",
                    "path": "${NFS_SERVER_SHARE}/notebooks-${COURSE_NAME}-pv"
                },
                "claimRef": {
                    "namespace": "${COURSE_NAME}",
                    "name": "${APPLICATION_NAME}-notebooks"
                },
                "persistentVolumeReclaimPolicy": "Retain"
            }
        }
    ]
}
